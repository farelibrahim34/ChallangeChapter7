<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".isi.EditDataActivity">
    <TextView
        style="@style/DescriptionStyle"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Edit Data Mahasiswa"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Masukkan Nama"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/editNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan Nim"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editNama"
        app:layout_constraintStart_toStartOf="@+id/editNama"
        app:layout_constraintTop_toBottomOf="@+id/editNama" />

    <EditText
        android:id="@+id/editAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan Alamat"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editNim"
        app:layout_constraintStart_toStartOf="@+id/editNim"
        app:layout_constraintTop_toBottomOf="@+id/editNim" />

    <EditText
        android:id="@+id/editFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Link Foto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editAlamat"
        app:layout_constraintStart_toStartOf="@+id/editAlamat"
        app:layout_constraintTop_toBottomOf="@+id/editAlamat" />

    <EditText
        android:id="@+id/editJk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan Jenis Kelamin"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editFoto"
        app:layout_constraintStart_toStartOf="@+id/editFoto"
        app:layout_constraintTop_toBottomOf="@+id/editFoto" />

    <Button
        android:id="@+id/btnSimpanData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editJk" />

</androidx.constraintlayout.widget.ConstraintLayout>